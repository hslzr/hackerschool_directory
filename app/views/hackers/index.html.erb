<div class="page-header">
  <h1>Hackers</h1>
</div>

<div class="pull-right">
<%= link_to "Nuevo Hacker",
            new_hacker_path,
            :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
			<th>Generation</th>
			<th>Status</th>
      <th>Languages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hackers.each do |hacker| %>
      <tr>
        <td><%= link_to hacker.name, hacker %></td>
        <td><%= hacker.email %></td>
				<td><%= hacker.generation.name %></td>
				<td><%= hacker.status.upcase %></td>
        <td><%= hacker.languages.map(&:name).join(", ") %></td>
        <td>

        <%= link_to "Editar",
                      edit_hacker_path(hacker), class: 'btn btn-default btn-xs' %>
          <%= link_to "Eliminar",
                      hacker_path(hacker),
                      :method => :delete,
                      :data => { confirm: "Â¿EstÃ¡s seguro?" },
											:class => 'btn btn-xs btn-danger' %>
							<%= link_to "#{ hacker.active? ? 'Deactivate' : 'Activate'}",
											activate_hacker_path(hacker),
											method: :put,
											class: 'btn btn-xs btn-info'	%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
